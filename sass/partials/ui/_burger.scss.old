$burger--color: rgba(#FFF, 1) !default;

//  Module burger
//===============

.burger {
  cursor: pointer;
  display: inline-block;
  height: $burger_height;
  //overflow: hidden;
  position: relative;
  vertical-align: middle;
  width: $burger-width;
  z-index: 9999;

  & .burger-line,
  & .burger-line:after,
  & .burger-line:before {
    background: $burger-color;
    border-radius: $burger-radius;
    display: block;
    height: $burger-height * 0.25;
    left: 0;
    position: absolute;
    transition: all ease-out $burger-animation-duration;
    width: 100%;
  }

  .burger-line { 
    top: $burger-height * 0.375; 
  }

  .burger-line:after { 
    content: ''; 
    top: -$burger-height * 0.375; 
  }

  .burger-line:before { 
    content: ''; 
    top: $burger-height * 0.375; 
  }

  &.is-open {
    
    .burger-line { 
      background: rgba($burger-is_open-color, 0); 
      left: -$burger-width; 
    }

    .burger-line:after,
    .burger-line:before { 
      left: $burger-width;
      top: 0; 
      transform: rotate(45deg); 
    }

    .burger-line:before { 
      transform: rotate(-45deg); 
    }

  }
  
}